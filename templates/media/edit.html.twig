{% extends 'base.html.twig' %}

{% block title %}Modifier {{ medium.Title }} - MetalVault{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>✏️ Modifier {{ medium.Title }}</h1>
        <div class="d-flex gap-2">
            <a href="{{ path('app_media_show', {'id': medium.id}) }}" class="btn btn-secondary">👁️ Voir</a>
            <a href="{{ path('app_media_index') }}" class="btn btn-secondary">← Retour à la collection</a>
        </div>
    </div>

    <div class="card rock-border">
        <div class="card-header">
            <h2 class="card-title">Modifier les Informations</h2>
        </div>
        <div class="card-body">
            {{ include('media/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>
    </div>

    <div class="mt-4 text-center">
        {{ include('media/_delete_form.html.twig') }}
    </div>
{% endblock %}
