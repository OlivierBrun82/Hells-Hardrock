{% extends 'base.html.twig' %}

{% block title %}Media{% endblock %}

{% block body %}
    <h1>Media</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ medium.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ medium.Title }}</td>
            </tr>
            <tr>
                <th>GroupName</th>
                <td>{{ medium.GroupName }}</td>
            </tr>
            <tr>
                <th>Style</th>
                <td>{{ medium.Style }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ medium.Year }}</td>
            </tr>
            <tr>
                <th>Medium</th>
                <td>{{ medium.Medium }}</td>
            </tr>
            <tr>
                <th>Propriétaire</th>
                <td>{{ medium.Owner.FirstName }} {{ medium.Owner.LastName }}</td>
            </tr>
            <tr>
                <th>Emprunteur</th>
                <td>
                    {% if medium.Borrower %}
                        {{ medium.Borrower.FirstName }} {{ medium.Borrower.LastName }}
                    {% else %}
                        <span class="text-muted">Aucun emprunteur</span>
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex gap-2">
        <a href="{{ path('app_media_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <a href="{{ path('app_media_edit', {'id': medium.id}) }}" class="btn btn-warning">Modifier</a>
        <a href="{{ path('app_media_borrow', {'id': medium.id}) }}" class="btn btn-primary">
            {% if medium.Borrower %}
                Gérer l'emprunt
            {% else %}
                Emprunter
            {% endif %}
        </a>
        {{ include('media/_delete_form.html.twig') }}
    </div>
{% endblock %}
